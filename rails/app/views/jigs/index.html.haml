%h1= t '.title'

%table.data.box
  %thead
    %tr
      %th= t '.name'
      %th= t '.active'
      %th= t '.description'
      %th
  %tbody
    - @jigs.each do |j|
      %tr.node{ :class => cycle(:odd, :even) }
        %td= link_to j.name, jig_path(j.id)
        %td
          - if j.active
            .led{:id => j.name, :class => 'active', :style => "float:left", :title=>t('active')}
          - else
            .led{:id => j.name, :class => 'proposed', :style => "float:left", :title=>t('inactive')}
        %td= j.description
        %td= link_to t('.flush'), "/api/v2/jigs/#{j.id}/flush", :class => 'button', :method=>:put, :'data-remote' => true

