# Provides:               crowbar_join.sh
# Required-Start:         sshd
# Required-Stop:
# Default-Start:          2 3 4 5
# Default-Stop:
# Short-Description:      Crowbar Join Script
#### END INIT INFO

# Spin while we wait for the interface to come up.

echo "Waiting on our network interface to come up..."
while ! ip addr | grep -v " lo" | grep -q "inet "
do
  sleep 1
done

if [[ -f /etc/crowbar.install.key ]]; then
    export CROWBAR_KEY="$(cat /etc/crowbar.install.key)"
fi

put_alive() {
    echo "Seting node alive=$1"
    while ! curl -f -u "$CROWBAR_KEY" --digest -L -X PUT \
        -d "bootenv=local" \
        -d "alive=$1" \
        "<%=@api_server%>/api/v2/nodes/<%=@name%>" &>/dev/null; do
        sleep 1
        # Get our hostname - Sometimes it isn't set yet.
        HOSTNAME=$(hostname -f)
    done
}

# Force time (some OS already have this done
ntpdate <%=@ntp_server%> 2>/dev/null >/dev/null

case $1 in
    stop) put_alive false;;
    status) echo "OK";;
    start) put_alive false; put_alive true;;
    *) echo "Unknown action to crowbar_join.sh."
        exit 1;;
esac
