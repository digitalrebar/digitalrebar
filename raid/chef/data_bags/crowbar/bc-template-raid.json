{
  "id": "bc-template-raid",
  "description": "The default proposal for the raid barclamp",
  "attributes": {
    "raid": {
	  "enable": true,
	  "debug": false
	 }
  },
  "deployment": {
    "raid": {
      "crowbar-revision": 0,
      "elements": {},
      "element_states": {
        "raid-setboot-disk-first": [ "installed" ],
        "raid-setboot-nic-first": [ "hardware-installing" ],
        "raid-configure": [ "hardware-installing" ],
        "discover-raid": [ "discovering" ]
      },
      "element_run_list_order": {
        "raid-setboot-nic-first": 16,
        "discover-raid": 18,
        "raid-configure": 18,
        "raid-setboot-disk-first": 19
      },
      "element_order": [
        [ "raid-configure"  ]
      ],
      "config": {
        "environment": "raid-base-config",
        "mode": "full",
        "transitions": true,
        "transition_list": [
          "discovering", "discovered"
	]
      }
    }
  }
}
